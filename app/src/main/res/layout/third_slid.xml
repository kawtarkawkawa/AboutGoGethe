<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE">

    <ImageView
        android:id="@+id/ma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/get"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="14dp"
        android:scaleType="centerCrop"
        android:src="@drawable/enfant" />

    <TextView
        android:id="@+id/makenew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ma"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="63dp"
        android:text="“"
        android:textColor="#000000"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/maken"
        android:layout_width="272dp"
        android:layout_height="81dp"
        android:layout_below="@+id/makenew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-28dp"
        android:text="@string/slid3_desc"
        android:textColor="#000000"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maken"
        android:layout_alignParentStart="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="-39dp"
        android:text="@string/slid3_deesc"
        android:textColor="#000000"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maken"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-37dp"
        android:layout_marginRight="87dp"
        android:text="”"
        android:textColor="#000000"
        android:textSize="50sp" />

</RelativeLayout>